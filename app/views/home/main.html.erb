        <div class="blowing_input" style="background:#fff35f">

          <div class="" style="text-align:center">
            <h4 class="modal-title" id="myModalLabel2">Modal title</h4>
          </div>

          <form style="text-align:center; margin-top:20px;">
            <div class="input_box">
              <input class="input_username" type="text" name="Username" placeholder="ID" ><br>
              <textarea class="input_text" style="height:190px" type="text" name="text" placeholder="TEXT"></textarea><br>
            </div>
            <input class="input_submit" type="submit" value="BLOW">
          </form>
        </div>
      </div>
    </div>
    <!-- Modal3 : news form tag ----------------------------->
    <div class="modal fade" id="myModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <!-- <div class="blowing_mark"><img src="/sources/button/button3_news.png"></div> -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

